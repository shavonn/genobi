{
  "name": "genobi",
  "version": "1.0.0",
  "description": "Flat text file generator and modifier configured with your templates, prompt input, and instructions.",
  "engines": {
    "node": ">=20.12.0"
  },
  "scripts": {
    "dev": "ts-node bin/cli.ts",
    "build": "tsup --tsconfig tsconfig.json",
    "prepare": "bun run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "biome check --write",
    "change": "changeset",
    "publish-package": "changeset version && changeset publish"
  },
  "bin": {
    "genobi": "dist/bin/cli.js"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "module": "dist/src/index.mjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/src/index.d.mts",
        "default": "./dist/src/index.mjs"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "generator",
    "scaffolding",
    "templates",
    "typescript"
  ],
  "author": "Shavonn Brown <syskit@sysmatter.com>",
  "license": "MPL-2.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.9",
    "@vitest/coverage-istanbul": "^4.0.17",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "chalk": "5.6.2",
    "commander": "^14.0.2",
    "cosmiconfig": "^9.0.0",
    "glob": "^13.0.0",
    "handlebars": "^4.7.8",
    "inquirer": "^13.2.1",
    "zod": "^4.3.5"
  }
}
