{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"isolatedModules": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"outDir": "dist",
		"declarationDir": "dist/types",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src", "bin"],
	"exclude": ["node_modules", "dist"]
}
